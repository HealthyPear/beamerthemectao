\ProvidesPackage{beamerthemectao}[2024/04/29 Unofficial CTAO beamer theme]

\RequirePackage{ifluatex}
\RequirePackage{ifxetex}
\ifluatex\else\ifxetex\else%
\PackageError{The beamerthemectao requires using xelatex or lualatex}%
\fi\fi

\RequirePackage{pgfopts}

\newif\if@ctaotheme@dark\@ctaotheme@darkfalse

\setbeamertemplate{navigation symbols}{}

\pgfkeys{
  /ctaotheme/.cd,
  .search also={
    /ctaotheme/inner,
    /ctaotheme/outer,
    /ctaotheme/color,
    /ctaotheme/font,
  }
}

\usefonttheme{ctao}
\usecolortheme{ctao}
\useinnertheme{ctao}
\useoutertheme{ctao}

\ProcessPgfOptions{/ctaotheme}
